{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "importHelpers": true,
  "moduleResolution": "node",
  "skipLibCheck": true,
  "sourceMap": true,
  "allowSyntheticDefaultImports": true,
  "esModuleInterop": true,
  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
